<%- contentFor('body') %>

    <table border="1px" class="table">
        <thead>
          <tr>
            <th>#id</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>Valor/Hora</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody >
            <% for ( var aluno of alunos ) {  %>
            <tr>
                <td><%= aluno._id %></td>
                <td><%= aluno.name %></td>
                <td><%= aluno.telefone %></td>
                <td><%= aluno.valor_hora %></td>
                <td>
                    <a href="/admin/<%= aluno._id %>"  class="btn btn-info"><i class="fa fa-eye"></i></a>
                    <form style="display: inline-block" action="/admin/<%= aluno._id %>/?_method=DELETE"  method="POST" >
                        <button type="submit" class="btn btn-danger btn small"><i class="fa fa-trash"></i></button>
                    </form>
                </td>
            </tr>
            <% } %>
        </tbody>
      </table>